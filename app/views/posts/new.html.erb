<div class="col-md-8">
  <%= form_for(:post, url: posts_create_path, method: "post") do %>
    <div class="form-group">
      <%= label(:post, :title, "Заголовок") %>
      <%= text_field(:post, :title, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= label(:post, :topic_id, "Выберите тему") %>
      <%= select(:post, :topic_id, options_from_collection_for_select(@topics, "id", "title"), {}, {class: "form-control"}) %>
    </div>
    <div class="form-group">
      <%= label(:post, :body, "Текст") %>
      <%= text_area(:post, :body, class: "form-control", rows: "10") %>
    </div>
    <button type="submit" class="btn btn-primary">Создать</button>
  <% end %>
</div>